[Unit]
Description=Deskflow Connection Watchdog
After=graphical-session.target

[Service]
Type=simple
# %h expands to the user's home directory at runtime.
# Adjust the path after %h if you installed the scripts elsewhere.
ExecStart=%h/deskflow-watchdog/start-deskflow-watchdog.sh
Restart=on-failure
RestartSec=30
Environment="DISPLAY=:0"
Environment="WAYLAND_DISPLAY=wayland-0"

[Install]
WantedBy=default.target
